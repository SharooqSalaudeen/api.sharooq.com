{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "strictPropertyInitialization": false,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@types/*": ["src/types/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"],
    "moduleResolution": "node"
}
